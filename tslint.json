{
  "rulesDirectory": [
    "codelyzer",
    "tslint-consistent-codestyle"
  ],
  "extends": [
    "tslint-etc",
    "angular-tslint-rules",
    "tslint-plugin-blank-line",
    "tslint-clean-code"
  ],
  "rules": {
    "indent": [
      true,
      "spaces",
      4
    ],
    "label-position": true,
    "max-line-length": [
      true,
      140
    ],
    "no-console": [
      true,
      "debug",
      "log",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-inferrable-types": true,
    "no-unused-variable": false,
    "no-unused-declaration": true,
    "object-literal-sort-keys": false,
    "directive-selector": [
      true,
      "attribute",
      "gd",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "gd",
      "kebab-case"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never",
        "esSpecCompliant": true
      }
    ],
    "array-type": [
      true,
      "array-simple"
    ],
    "typedef": [
      true,
      "call-signature",
      "parameter",
      "property-declaration"
    ],
    "no-unsafe-any": {
      "severity": "warning"
    },
    "no-implicit-dependencies": [
      true,
      ["@", "@common", "@shared", "@core"]
    ],
    "no-output-on-prefix": {
      "severity": "warning"
    },
    "prefer-method-signature": false,
    "rxjs-collapse-imports": true,
    "rxjs-pipeable-operators-only": true,
    "rxjs-no-static-observable-methods": true,
    "rxjs-proper-imports": true,
    "rxjs-no-internal": {
      "severity": "error"
    },
    "deprecation": {
      "severity": "warning"
    },
    "rxjs-no-subject-unsubscribe": {
      "severity": "warning"
    },
    "rxjs-finnish": {
      "severity": "error"
    },
    "rxjs-ban-observables": {
      "options": [{
        "empty": "Use EMPTY",
        "never": "Use NEVER"
      }],
      "severity": "error"
    },
    "rxjs-ban-operators": {
      "options": [{
        "combineLatest": "Use the static combineLatest",
        "concat": "Use the static concat",
        "merge": "Use the static merge",
        "race": "Use the static race",
        "zip": "Use the static zip"
      }],
      "severity": "error"
    },
    "rxjs-no-deep-operators": true,
    "rxjs-no-exposed-subjects": {
      "severity": "error"
    },
    "rxjs-no-unsafe-scope": {
      "severity": "error"
    },
    "rxjs-no-subject-value": {
      "severity": "warning"
    },
    "rxjs-no-unsafe-switchmap": {
      "severity": "error"
    },
    "rxjs-throw-error": {
      "severity": "error"
    },
    "rxjs-no-ignored-error": {
      "severity": "error"
    },
    "rxjs-no-create": {
      "severity": "error"
    },
    "rxjs-no-nested-subscribe": {
      "severity": "warning"
    },
    "rxjs-no-tap": {
      "severity": "warning"
    },
    "rxjs-no-unsafe-catch": {
      "severity": "error"
    },
    "rxjs-no-unsafe-first": {
      "severity": "error"
    },
    "rxjs-no-ignored-subscribe": {
      "severity": "warning"
    },
    "rxjs-no-unsafe-takeuntil": true,
    "rxjs-add": {
      "severity": "error"
    },
    "rxjs-no-unused-add": {
      "severity": "error"
    },
    "template-i18n": false,
    "template-cyclomatic-complexity": [true, 20],
    "blank-line": [true, "ignore-imports"],
    // tslint-consistent-codestyle rules
    "no-collapsible-if": true,
    "early-exit": {
      "options": { "max-length": 5, "ignore-constructor": true },
      "severity": "warning"
    },
    "naming-convention": true,
    "no-unnecessary-else": true,
    "no-static-this": true,
    "no-unused": true,
    "no-var-before-return": [true, "allow-destructuring"],
    "parameter-properties": [
      true,
      "all-or-none",   // forces all or none of a constructors parameters to be parameter properties
      "member-access", // forces an access modifier for every parameter property
      "readonly"       // forces all parameter properties to be readonly
    ],
    "prefer-const-enum": true,
    "prefer-while": true,
    // tslint-clean-code
    "id-length": [true, {
      "exceptions": [
        "T",
        "U",
        "S",
        "V"
      ]
    }],
    "no-for-each-push": true,
    "no-map-without-usage": true,
    "no-complex-conditionals": true,
    "prefer-dry-conditionals": true,
    "no-commented-out-code": {
      "severity": "warning"
    }
  }
}
